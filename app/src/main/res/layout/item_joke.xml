<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/joke_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@color/cardview_light_background">

    <TextView
        android:id="@+id/joke_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16.dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@id/joke_date"
        app:layout_constraintHorizontal_weight="2.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Купил мужик шляпу, а она ему как раз" />

    <TextView
        android:id="@+id/joke_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16.dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1.0"
        app:layout_constraintStart_toEndOf="@id/joke_text"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="01-02-1993" />
</androidx.constraintlayout.widget.ConstraintLayout>
